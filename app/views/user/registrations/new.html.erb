<h2>Sign upp</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :email %>
  <%#= f.input :password %>
  <%#= f.input :password_confirmation %>
  <%#= f.simple_fields_for :user_info do |i| %>
    <%#= i.input :name %>
  <%# end %>
  <div><%= f.submit "Sign up" %></div>
<% end %>

